<Window x:Class="Demoxml.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demoxml"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00FF23" Offset="0"/>
                <GradientStop Color="#FF002EFF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Btn_aggiorna" Content="Visualizza dati" HorizontalAlignment="Left" Margin="53,56,0,0" VerticalAlignment="Top" Width="181" Click="Btn_aggiorna_Click" Height="35"/>
        <ListBox x:Name="Lst_calciatori" HorizontalAlignment="Left" Height="163" Margin="53,115,0,0" VerticalAlignment="Top" Width="431"/>
        <Button x:Name="Btn_stop" Content="Stop" HorizontalAlignment="Left" Margin="308,56,0,0" VerticalAlignment="Top" Width="176" Height="35" Click="Btn_stop_Click"/>

    </Grid>
</Window>
